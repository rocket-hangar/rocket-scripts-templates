{
  "name": "electron-template",
  "version": "1.0.0",
  "scripts": {
    "app:build": "TS_NODE_PROJECT=tsconfig.script.json node -r ts-node/register scripts/build.ts",
    "app:start": "TS_NODE_PROJECT=tsconfig.script.json node -r ts-node/register scripts/start.ts",
    "app:pack": "TS_NODE_PROJECT=tsconfig.script.json node -r ts-node/register scripts/pack.ts",
    "storybook:start": "start-storybook",
    "storybook:build": "build-storybook --output-dir out/storybook",
    "build": "yarn run app:build",
    "start": "yarn run app:start",
    "pack": "yarn run app:pack",
    "test": "jest --colors",
    "coverage": "jest --coverage",
    "format": "prettier --write \"src/{**/*,*}/*.{ts,tsx}\"",
    "lint": "eslint \"src/{**/*,*}/*.{ts,tsx}\""
  },
  "husky": {
    "hooks": {
      "pre-commit": "markdown-source-import \"{,!(node_modules)/**/}*.md\" --git-add && lint-staged"
    }
  },
  "lint-staged": {
    "src/{**/*,*}/*.{ts,tsx}": [
      "prettier --write",
      "eslint",
      "jest --colors --findRelatedTests"
    ]
  },
  "devDependencies": {
    "@rocket-scripts/electron": "^1.0.0-alpha.13",
    "@ssen/eslint-config": "^1.1.0",
    "@ssen/prettier-config": "^1.0.0",
    "@ssen/promised": "^2.1.2",
    "@storybook/addon-essentials": "^6.0.16",
    "@storybook/addon-storysource": "^6.0.16",
    "@storybook/react": "^6.0.16",
    "@types/eslint": "^7.2.1",
    "@types/jest": "^26.0.10",
    "@types/prettier": "^2.0.2",
    "@types/puppeteer-core": "^2.0.0",
    "@types/react": "^16.9.46",
    "@types/react-dom": "^16.9.8",
    "@types/webpack-env": "^1.15.1",
    "electron": "^9.2.1",
    "electron-packager": "^15.1.0",
    "eslint": "^7.7.0",
    "eslint-config-prettier": "^6.11.0",
    "extract-zip": "^2.0.1",
    "husky": "^4.2.5",
    "jest": "^26.4.1",
    "lint-staged": "^10.2.11",
    "markdown-source-import": "^1.3.1",
    "prettier": "^2.0.5",
    "puppeteer-core": "^5.2.1",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.2"
  }
}
